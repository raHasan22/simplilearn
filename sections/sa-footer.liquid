<!doctype html>

<style>
    footer {
        background: #0000A0;
        padding: 60px 20px;
      letter-spacing: normal;
    }

    footer    .srs-container {
        max-width: 1124px;
        margin: 0 auto;
    }

    footer    .footer-content {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        justify-content: space-between;
    }

    footer   .footer-section {
        display: flex;
        flex-direction: column;
        /* min-width: 200px; */
        flex: 1;
    }

    footer   .footer-section h3 {
        color: white;
        font-size: 15px;
        font-weight: 400;
        line-height: 26px;
        margin-bottom: 13px;
    }

    footer    .footer-section ul {
        list-style: none;
    }

    footer    .footer-section ul li {
        margin-bottom: 10px;
    }

    footer    .footer-section ul li a {
        color: white;
        font-size: 13px;
        font-weight: 400;
        line-height: 20px;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    footer    .footer-section ul li a:hover {
        color: #CCCCCC;
    }

    footer    .social-section {
        max-width: 152.68px;
        display: flex;
        flex-direction: column;
    }

    footer    .social-section h3 {
        color: white;
        font-size: 14.75px;
        font-weight: 400;
        line-height: 26px;
        margin-bottom: 13px;
    }

    footer    .refer-earn-btn {
        width: 120px;
        height: 37.54px;
        border: 1px solid white;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        text-decoration: none;
    }

    footer    .refer-earn-btn span {
        color: #CCCCCC;
        font-size: 13.34px;
        font-weight: 500;
        line-height: 36px;
    }

    footer    .social-icons {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    footer   .social-icon {
        width: 33px;
        height: 33px;
        background: white;
        border-radius: 16.5px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    footer    .social-icon svg {
        width: 20px;
        height: 20px;
        fill: #0000A0;
    }

    footer    .app-download-section h3 {
        color: white;
        font-size: 15.12px;
        font-weight: 400;
        line-height: 26px;
        margin-bottom: 11px;
        padding-left: 23px;
    }

    footer   .app-buttons {
        display: flex;
        flex-direction: column;
    }

    footer    .app-btn {
        width: 202px;
        height: 47px;
        border: 1px solid #777777;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 0 15px;
        text-decoration: none;
        border-radius: 5px;
    }

    footer   .app-btn:first-child {
        /* border-bottom: none; */
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    footer    .app-btn:last-child {
        border-top: none;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    footer    .app-btn span {
        color: #CCCCCC;
        font-size: 13.12px;
        font-weight: 400;
        line-height: 32px;
    }

    footer    .app-icon {
        /* width: 24px;
        height: 24px; */
        background: #0000A0;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* footer   .app-icon svg {
        width: 16px;
        height: 16px;
        fill: white;
    } */

    /* Course Listings Styles */
    footer .course-listings {
        border-top: 0.77px #D6D6D6 solid;
        padding-top: 40px;
        margin-top: 40px;
    }

    footer .course-section {
        margin-bottom: 40px;
    }

    footer .course-section h3 {
        color: white;
        font-size: 14.75px;
        font-weight: 400;
        line-height: 26px;
        margin-bottom: 20px;
        letter-spacing: 0.32px;
    }

    footer .course-links {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 5px;
    }

    footer .course-links a {
        color: #D6D6D6;
        font-size: 13px;
        font-weight: 400;
        line-height: 20px;
        text-decoration: none;
        letter-spacing: 0.32px;
        transition: color 0.3s ease;
    }

    footer .course-links a:hover {
        color: white;
    }

    footer .course-links .separator {
        color: #D6D6D6;
        font-size: 16px;
        font-weight: 400;
        line-height: 26px;
        letter-spacing: 0.32px;
    }

    /* Footer Bottom Styles */
    footer .footer-bottom {
        margin-top: 40px;
        padding-top: 20px;
    }

    footer .footer-bottom-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    footer .footer-links {
        display: flex;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: center;
    }

    footer .footer-link {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        color: #FDFDFD;
        font-size: 12.91px;
        font-family: Inter;
        font-weight: 400;
        line-height: 20px;
        transition: color 0.3s ease;
    }

    footer .footer-link:hover {
        color: #CCCCCC;
    }

    footer .link-dot {
        width: 5px;
        height: 5px;
        background: #B3B3B3;
        border-radius: 5px;
    }

    footer .footer-copyright {
        text-align: center;
    }

    footer .footer-copyright p {
        color: white;
        font-size: 11.06px;
        font-family: Inter;
        font-weight: 400;
        line-height: 26px;
        margin: 0;
    }

    footer .country-selector {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 10px;
    }

    footer .country-dot {
        width: 5px;
        height: 5px;
        background: #B3B3B3;
        border-radius: 5px;
    }

    footer .country-selector span {
        color: #FDFDFD;
        font-size: 13.02px;
        font-family: Inter;
        font-weight: 400;
        line-height: 26px;
    }

    footer .country-dropdown {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border: 1px solid #494440;
        border-radius: 3px;
        background: transparent;
        cursor: pointer;
    }
  footer .footer-section ul{
  padding: 0;
  }
    footer .country-dropdown img {
        width: 28.62px;
        height: 17px;
    }

    footer .dropdown-arrow {
        width: 0;
        height: 0;
        border-left: 4.62px solid white;
        border-top: 4.62px solid white;
        border-right: 4.62px solid white;
        border-bottom: none;
    }

    /* Tablet Styles */
    @media (max-width: 1024px) {
        footer .footer-content {
            gap: 30px;
        }

        footer .footer-section {
            min-width: 180px;
        }

        footer .social-section {
            max-width: 140px;
        }

        footer .app-btn {
            width: 160px;
        }
    }

    /* Mobile Styles */
    @media (max-width: 768px) {
        footer {
            padding: 40px 15px;
        }

        footer .footer-content {
            flex-direction: column;
            gap: 30px;
        }

        footer .footer-section {
            min-width: 100%;
            width: 100%;
        }

        footer .social-section {
            max-width: 100%;
            align-items: center;
        }

        footer .social-icons {
            justify-content: center;
        }

        footer .app-download-section {
            align-items: center;
        }

        footer .app-download-section h3 {
            padding-left: 0;
            text-align: center;
        }

        footer .app-buttons {
            align-items: center;
        }

        footer .app-btn {
            width: 200px;
        }

        footer .course-links {
            gap: 3px;
            justify-content: start;
        }

        footer .course-links a {
            font-size: 12px;
        }

        footer .course-links .separator {
            font-size: 14px;
        }

        footer .footer-links {
            gap: 15px;
            flex-direction: column;
        }

        footer .footer-link {
            font-size: 12px;
        }

        footer .footer-copyright p {
            font-size: 10px;
            line-height: 20px;
        }

        footer .country-selector {
            gap: 10px;
        }

        footer .country-selector span {
            font-size: 12px;
        }
    }

    /* Small Mobile Styles */
    @media (max-width: 480px) {
        footer {
            padding: 30px 10px;
        }

        footer .footer-content {
            gap: 25px;
        }

        footer .footer-section h3 {
            font-size: 14px;
            margin-bottom: 10px;
        }

        footer .footer-section ul li a {
            font-size: 12px;
        }

        footer .social-section h3 {
            font-size: 14px;
        }

        footer .refer-earn-btn {
            width: 110px;
            height: 35px;
        }

        footer .refer-earn-btn span {
            font-size: 12px;
        }

        footer .social-icon {
            width: 30px;
            height: 30px;
        }

        footer .social-icon svg {
            width: 18px;
            height: 18px;
        }

        footer .app-download-section h3 {
            font-size: 14px;
        }

        footer .app-btn {
            width: 180px;
            height: 45px;
        }

        footer .app-btn span {
            font-size: 12px;
        }

        footer .course-section h3 {
            font-size: 13px;
            margin-bottom: 15px;
        }

        footer .course-links a {
            font-size: 11px;
        }

        footer .course-links .separator {
            font-size: 12px;
        }

        footer .footer-links {
            gap: 12px;
        }

        footer .footer-link {
            font-size: 11px;
        }

        footer .footer-copyright p {
            font-size: 9px;
            line-height: 18px;
        }

        footer .country-selector span {
            font-size: 11px;
        }
    }
</style>

<footer>
  <div class="srs-container">
    <div class="footer-content">
      <!-- Social Section -->
      <div class="footer-section social-section">
        <h3>{{ section.settings.social_title | default: 'Follow us!' }}</h3>

        {% if section.settings.show_refer_earn %}
          <a href="{{ section.settings.refer_earn_link | default: '#' }}" class="refer-earn-btn">
            <span>{{ section.settings.refer_earn_text | default: 'Refer and Earn' }}</span>
          </a>
        {% endif %}

        <div class="social-icons">
          {% for block in section.blocks %}
            {% if block.type == 'social_media' %}
              <a
                href="{{ block.settings.social_link | default: '#' }}"
                class="social-icon"
                target="_blank"
                rel="noopener"
              >
                {{ block.settings.custom_svg }}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Company Section -->
      <div class="footer-section">
        <h3>{{ section.settings.company_title | default: 'Company' }}</h3>
        <ul>
          {% for link in linklists[section.settings.company_menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Work with us Section -->
      <div class="footer-section">
        <h3>{{ section.settings.work_title | default: 'Work with us' }}</h3>
        <ul>
          {% for link in linklists[section.settings.work_menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Discover Section -->
      <div class="footer-section">
        <h3>{{ section.settings.discover_title | default: 'Discover' }}</h3>
        <ul>
          {% for link in linklists[section.settings.discover_menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- For Businesses Section -->
      <div class="footer-section">
        <h3>{{ section.settings.business_title | default: 'For Businesses' }}</h3>
        <ul>
          {% for link in linklists[section.settings.business_menu].links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- App Download Section -->
      <div class="footer-section app-download-section">
        <h3>{{ section.settings.app_title | default: 'Learn On the Go!' }}</h3>
        <div class="app-buttons">
          {% if section.settings.android_app_link %}
            <a href="{{ section.settings.android_app_link }}" class="app-btn">
