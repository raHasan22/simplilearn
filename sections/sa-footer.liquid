              </div>
              <span>{{ section.settings.ios_app_text | default: 'Get the iOS App' }}</span>
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {% if section.settings.show_course_listings %}
      <div class="course-listings">
        {% for block in section.blocks %}
          {% if block.type == 'course_section' %}
            <div class="course-section">
              <h3>{{ block.settings.course_title }}</h3>
              <div class="course-links">
                {% for i in (1..10) %}
                  {% assign link_key = 'course_link_' | append: i %}
                  {% assign link_text_key = 'course_text_' | append: i %}
                  {% if block.settings[link_key] and block.settings[link_text_key] %}
                    <a href="{{ block.settings[link_key] }}">{{ block.settings[link_text_key] }}</a>
                    {% unless forloop.last %}
                      <span class="separator">|</span>
                    {% endunless %}
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-links">
          {% for link in linklists[section.settings.footer_menu].links %}
            <a href="{{ link.url }}" class="footer-link">
              <span>{{ link.title }}</span>
              {% unless forloop.last %}
                <div class="link-dot"></div>
              {% endunless %}
            </a>
          {% endfor %}
        </div>
        <div class="footer-copyright">
          <p>
            {{
              section.settings.copyright_text
              | default: '© 2009-2025 - Simplilearn Solutions. All Rights Reserved. The certification names are the trademarks of their respective owners.'
            }}
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

