<style>
        .srs-trust-section{
        padding: {{ section.settings.section_padding }}px 20px;
        background-color: {{ section.settings.background_color }};
    }
    .srs-trust-section .srs-container{
        max-width: {{ section.settings.container_width }}px;
        margin: 0 auto;
    }
    h2.srs-trust-title {
    font-family: "Inter", sans-serif;
    font-weight: {{ section.settings.title_font_weight }};
    font-size: {{ section.settings.title_font_size }}px;
    line-height: 100%;
    letter-spacing: 0px;
    text-align: center;
    vertical-align: middle;
    color: {{ section.settings.title_color }};
    }

    .srs-trust-cards {
    display: flex;
    align-items: start;
    justify-content: space-between;
    gap: {{ section.settings.cards_gap }}px;
    }

    .srs-trust-card-wrapper {
    max-width: {{ section.settings.card_max_width }}px;
    width: 100%;
    }

    .rating-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-bottom: {{ section.settings.rating_margin_bottom }}px;
    }
    .rating-wrapper p{
    font-family: Inter;
    font-weight: 700;
    font-size: {{ section.settings.rating_font_size }}px;
    line-height: 44px;
    letter-spacing: -0.72px;
    text-align: center;
    vertical-align: middle;
    color: {{ section.settings.rating_color }};
      margin: 0;
    }

    .srs-trust-card {
    box-shadow: 0px 2px 10px 0px #3C3C3C1A;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.card_padding }}px;
    position: relative;
    background: {{ section.settings.card_background_color }};
    }
    .srs-trust-card .border{
    width: 100%;
    height: 100%;
    box-shadow: 2px 4px 8px 0px #3C3C3C0D;
    position: absolute;
    z-index: 1;
    top: 5px;
    left: 5px;
    }
  .srs-trust-card .bg{
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 2;
    top: 0px;
    left: 0px;
    background: #fff;
  }
  .srs-trust-card-image{
    z-index:3;
    display: flex;

  }
    @media (max-width: 768px) {
        .srs-trust-cards {
            flex-direction: column;
            align-items: center;
        }

        h2.srs-trust-title {
            font-size: {{ section.settings.title_font_size_mobile }}px;
        }

        .srs-trust-card-wrapper {
            max-width: 100%;
        }
    }
</style>

<section class="srs-trust-section">
  <div class="srs-container">
    <h2 class="srs-trust-title">{{ section.settings.title }}</h2>
    <div class="srs-trust-cards">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'trust_card' %}
            <div class="srs-trust-card-wrapper" {{ block.shopify_attributes }}>
              <div class="rating-wrapper">
                <p>{{ block.settings.rating }}</p>
                <svg width="20" height="21" viewBox="0 0 20 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M17.6996 9.40243L14.3076 12.4361L15.3411 16.9728C15.3981 17.2191 15.3834 17.4773 15.2989 17.715C15.2143 17.9526 15.0637 18.1589 14.8661 18.3079C14.6685 18.4569 14.4327 18.5418 14.1885 18.552C13.9444 18.5621 13.7028 18.4971 13.4943 18.365L9.68765 15.9368L5.87877 18.365C5.67029 18.4963 5.42899 18.5607 5.18524 18.5502C4.94149 18.5397 4.7062 18.4546 4.50899 18.3058C4.31178 18.1569 4.16147 17.9509 4.077 17.7137C3.99252 17.4765 3.97765 17.2187 4.03425 16.9728L5.07146 12.4361L1.67942 9.40243C1.49497 9.2372 1.36157 9.01932 1.29588 8.77598C1.2302 8.53264 1.23513 8.27464 1.31008 8.0342C1.38502 7.79376 1.52666 7.58152 1.71728 7.42401C1.90791 7.26649 2.13909 7.17067 2.38195 7.14852L6.82929 6.77665L8.54491 2.47352C8.63777 2.239 8.79582 2.0384 8.99897 1.89722C9.20212 1.75604 9.44118 1.68066 9.68577 1.68066C9.93035 1.68066 10.1694 1.75604 10.3726 1.89722C10.5757 2.0384 10.7338 2.239 10.8266 2.47352L12.5415 6.77665L16.9888 7.14852C17.2322 7.16985 17.464 7.26513 17.6553 7.42243C17.8467 7.57973 17.9889 7.79205 18.0644 8.03278C18.1398 8.27352 18.145 8.53197 18.0793 8.77575C18.0136 9.01953 17.88 9.2378 17.6951 9.40321L17.6996 9.40243Z" fill="#F59E0B"/>
                </svg>
              </div>
              <div class="srs-trust-card">
                <div class="border" style="background:{{ block.settings.border_color }};"></div>
                <div class="bg"></div>
                <div class="srs-trust-card-image">
                  {% if block.settings.image %}
                    <img
                      src="{{ block.settings.image | image_url: width: block.settings.image_width }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      width="{{ block.settings.image_width }}"
                      height="{{ block.settings.image_height }}"
                      loading="lazy"
                    >
                  {% else %}
                    <img
                      src="https://placehold.co/{{ block.settings.image_width }}x{{ block.settings.image_height }}"
                      alt=""
                      width="{{ block.settings.image_width }}"
                      height="{{ block.settings.image_height }}"
                    >
                  {% endif %}
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SA Trust Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Join 8 million learners who trust us"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Title Font Size (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "title_font_size_mobile",
      "min": 16,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Title Font Size (Mobile)",
      "default": 28
    },
    {
      "type": "range",
      "id": "title_font_weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "label": "Title Font Weight",
      "default": 700
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#0000A0"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Section Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 800,
      "max": 1200,
      "step": 5,
      "unit": "px",
      "label": "Container Max Width",
      "default": 985
    },
    {
      "type": "range",
      "id": "cards_gap",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Cards Gap",
      "default": 20
    },
    {
      "type": "range",
      "id": "card_max_width",
      "min": 150,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Card Max Width",
      "default": 235
    },
    {
      "type": "range",
      "id": "card_padding",
      "min": 10,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Card Padding",
      "default": 18
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Card Background Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "rating_font_size",
      "min": 20,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Rating Font Size",
      "default": 32
    },
    {
      "type": "color",
      "id": "rating_color",
      "label": "Rating Color",
      "default": "#111827"
    },
    {
      "type": "range",
      "id": "rating_margin_bottom",
      "min": 5,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Rating Bottom Margin",
      "default": 10
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "trust_card",
      "name": "Trust Card",
      "settings": [
        {
          "type": "text",
          "id": "rating",
          "label": "Rating",
          "default": "4.6"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 200,
          "step": 10,
          "unit": "px",
          "label": "Image Width",
          "default": 120
        },
        {
          "type": "range",
          "id": "image_height",
          "min": 30,
          "max": 100,
          "step": 5,
          "unit": "px",
          "label": "Image Height",
          "default": 50
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#FFDC00"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SA Trust Section",
      "blocks": [
        {
          "type": "trust_card",
          "settings": {
            "rating": "4.6",
            "border_color": "#FFDC00"
          }
        },
        {
          "type": "trust_card",
          "settings": {
            "rating": "4.6",
            "border_color": "#61A020"
          }
        },
        {
          "type": "trust_card",
          "settings": {
            "rating": "4.6",
            "border_color": "#FF8200"
          }
        }
      ]
    }
  ]
}
{% endschema %}
